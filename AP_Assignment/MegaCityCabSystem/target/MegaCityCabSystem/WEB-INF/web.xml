  <display-name>MegaCityCabSystem</display-name>

  <!-- Welcome files -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Filters -->
  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>lk.icbt.MegaCityCabSystem.filter.AuthenticationFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>DriverAuthFilter</filter-name>
    <filter-class>lk.icbt.MegaCityCabSystem.filter.DriverAuthFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>DriverAuthFilter</filter-name>
    <url-pattern>/driver/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>lk.icbt.MegaCityCabSystem.controller.UserLoginServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>LoginPageServlet</servlet-name>
    <servlet-class>lk.icbt.MegaCityCabSystem.controller.LoginPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginPageServlet</servlet-name>
    <url-pattern>/auth/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CustomerPageServlet</servlet-name>
    <servlet-class>lk.icbt.MegaCityCabSystem.controller.CustomerPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CustomerPageServlet</servlet-name>
    <url-pattern>/customer-form</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CabsPageServlet</servlet-name>
    <servlet-class>lk.icbt.MegaCityCabSystem.controller.CabsPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CabsPageServlet</servlet-name>
    <url-pattern>/customer/cabs-view</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AdminPageServlet</servlet-name>
    <servlet-class>lk.icbt.MegaCityCabSystem.controller.AdminPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AdminPageServlet</servlet-name>
    <url-pattern>/admin-form</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DriverPageServlet</servlet-name>
    <servlet-class>lk.icbt.MegaCityCabSystem.controller.DriverPageServlet</servlet-class>
  </servlet>

<servlet-mapping>
<servlet-name>DriverPageServlet</servlet-name>
<url-pattern>/admin/drivers-manage</url-pattern>
</servlet-mapping>

    <servlet>
        <servlet-name>RegistrationPageServlet</servlet-name>
        <servlet-class>lk.icbt.MegaCityCabSystem.controller.RegistrationPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationPageServlet</servlet-name>
        <url-pattern>/customer/register</url-pattern>
    </servlet-mapping>

  <servlet>
    <servlet-name>BookingPageServlet</servlet-name>
    <servlet-class>lk.icbt.MegaCityCabSystem.controller.BookingPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BookingPageServlet</servlet-name>
    <url-pattern>/customer/book-cab</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Session Configuration -->
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

